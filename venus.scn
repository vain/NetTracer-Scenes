###############
# Materialien #
###############

mat speccyRed
	diffuse 0.5 0.0 0.0
	specularity 0.9
	shininess 0.7
	shininessSharpness 0.7
end

mat lightBlue
	diffuse 0.7 1.0 0.7
	shininess 0.7
	shininessSharpness 0.7
end

procmat checker
	specularity 0.5
	diffusePattern checker
		offset 0.0 -0.25 0.0
		scale 5.0
	end
end


###########
# Objekte #
###########

offreader
	mat checker
	file off/plateau.off
	origin 0.0 -1.5 0.0
end

offreader
	mat lightBlue
	file off/venus.off
	origin 0.0 0.0 0.0
end


